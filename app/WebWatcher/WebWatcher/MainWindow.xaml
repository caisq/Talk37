<Window x:Class="WebWatcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:gaze="clr-namespace:Microsoft.Toolkit.Uwp.Input.GazeInteraction;assembly=FrameworkLib"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:WebWatcher"
        mc:Ignorable="d"
        gaze:GazeInput.Interaction="Enabled"
        Title="SpeakFaster Prototype"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Left="36"
        Top="40"
        Height="468"
        Width="1300"
        Topmost="False"
        BorderBrush="Cyan"
        BorderThickness="1"
        Loaded="Window_Loaded"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated"
        Closing="Window_Closing">
    <Grid>
        <cef:ChromiumWebBrowser x:Name="TheBrowser" />
        <Canvas x:Name="overlayCanvas" />
    </Grid>
</Window>
